<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    
    <ImageView
            android:id="@+id/awooseong_scrollMyInfoMainPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:adjustViewBounds="true"
            android:maxHeight="100dip"
            android:maxWidth="50dip"
            android:src="@drawable/base_person" />
    <TextView
             android:id="@+id/awooseong_scrollMyInfoName"
             android:layout_marginLeft="10dip"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/awooseong_scrollMyInfoMainPic"
             android:layout_alignTop="@id/awooseong_scrollMyInfoMainPic"
             android:textSize="20dip"
             android:text="name"
             />
    <ImageView
             android:id="@+id/awooseong_scrollMyInfoReportPic"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignTop="@id/awooseong_scrollMyInfoMainPic"
             android:layout_marginRight="16dp"
             android:adjustViewBounds="true"
             android:src="@drawable/ic_launcher" />
    <TextView 
             android:id="@+id/awooseong_scrollMyInfoDate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/awooseong_scrollMyInfoName"
             android:layout_toRightOf="@id/awooseong_scrollMyInfoMainPic"
             android:layout_alignLeft="@id/awooseong_scrollMyInfoName"
             android:layout_alignBottom="@id/awooseong_scrollMyInfoMainPic"
             />

</RelativeLayout>
