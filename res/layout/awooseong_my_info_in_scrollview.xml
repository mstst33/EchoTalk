<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="#ffffff" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/awooseong_scrollMyInfoMainPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:maxHeight="70dp"
            android:maxWidth="35dp"
            android:src="@drawable/base_person" />

        <TextView
            android:id="@+id/awooseong_scrollMyInfoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/awooseong_scrollMyInfoMainPic"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/awooseong_scrollMyInfoMainPic"
            android:text="name"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/awooseong_scrollMyInfoReportPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@id/awooseong_scrollMyInfoName"
            android:layout_alignBottom="@id/awooseong_scrollMyInfoMainPic"
            android:adjustViewBounds="true"
            android:maxHeight="30dp"
            android:src="@drawable/report" />

        <TextView
            android:id="@+id/awooseong_scrollMyInfoDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/awooseong_scrollMyInfoMainPic"
            android:layout_alignLeft="@id/awooseong_scrollMyInfoName"
            android:layout_below="@id/awooseong_scrollMyInfoName"
            android:layout_toRightOf="@id/awooseong_scrollMyInfoMainPic"
            android:text="date: 2013.09.15"
            android:textSize="10sp" />

	</RelativeLayout>
</LinearLayout>
