<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
            android:id="@+id/awooseong_join_relative_mainPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="40dp"
            android:maxHeight="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/base_person"
         />
     <TextView
             android:id="@+id/awooseong_join_relative_name"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/awooseong_join_relative_mainPic"
             android:layout_alignTop="@id/awooseong_join_relative_mainPic"
             android:textSize="15dp"
             android:textStyle="bold"
             android:text="name"
             />
     <TextView
             android:id="@+id/awooseong_join_relative_comment"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/awooseong_join_relative_mainPic"
             android:layout_below="@id/awooseong_join_relative_name"
             android:textSize="13dp"
             android:singleLine="true"
             />

</RelativeLayout>
